<h1> <%= @project.name %> - Tarefas </h1>
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nome</th>
        <th scope="col">Descrição</th>
        <th scope="col">Criado há</th>
        <th scope="col">Completar até</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>  
        <tr> 
        
          <th scope="row"><%= task.id %></th>
          <td style="border-left: solid <%= which_status(task) %>"><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= time_ago_in_words(task.created_at) %></td>
          <td><%= task.date_limit %></td>
          <td><%= task.status_i18n %></td>



          <td>
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" ><%= fa_icon 'ellipsis-h' %></a>
            <div class="dropdown-menu">
                        
                
                <%= link_to "Editar", edit_profile_task_path(task), class:"dropdown-item" %>
                 
                <%= link_to "Apagar", profile_task_path(task), class:"dropdown-item", method: :delete, data: { confirm: "Tem certeza?" } %>
                       
            </div>
          </td>
        </tr>        
      <% end %>      
      <%= render partial: "profile/tasks/shared/form"  %>      
    </tbody>
  </table>


